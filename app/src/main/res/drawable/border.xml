<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Border (garis tepi) -->
    <stroke
        android:width="2dp"
        android:color="#f3f4f6"/>
    <!-- Background (isi dalam border) -->
    <solid android:color="#FFFFFF"/> <!-- Warna putih -->

    <!-- Radius untuk sudut rounded -->
    <corners android:radius="8dp"/>

    <!-- Padding dalam border -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"/>
</shape>
