<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- StatePressed (when button is pressed) -->
<item android:state_pressed="true">
<shape android:shape="rectangle">
<solid android:color="#FF4081"/> <!-- Warna saat ditekan -->
<corners android:radius="8dp"/> <!-- Sudut membulat -->
</shape>
</item>
<!-- StateDefault (when button is not pressed) -->
<item>
<shape android:shape="rectangle">
<solid android:color="#E1FFC7"/> <!-- Warna default -->
<corners android:radius="8dp"/> <!-- Sudut membulat -->
</shape>
</item>
</selector>